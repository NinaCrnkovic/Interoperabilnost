@model IEnumerable<WineClientApplication.Models.Wine>

<h2>Wine List</h2>
<a asp-action="Create" class="btn btn-primary">Add Wine</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Type</th>
            <th>Country</th>
            <th>Vintage</th>
            <th>Winery</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var wine in Model)
        {
            <tr>
                <td>@wine.Id</td>
                <td>@wine.Name</td>
                <td>@wine.Description</td>
                <td>@wine.Category</td>
                <td>@wine.Type</td>
                <td>@wine.Country</td>
                <td>@wine.Vintage</td>
                <td>@wine.Winery</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@wine.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@wine.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

